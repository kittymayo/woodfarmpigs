<h1>Products#index</h1>
<p>Find me in app/views/products/index.html.erb</p>


<% @products_cat = @products.where(category: @category.id) %>

<% @products_cat.each do |product| %>
  <%= product.name %>
  <%= product.description %>
  <%= product.id %>
  <%= link_to "View product", category_product_path(@category.id, product.id) %>
<% end %>

